  "devDependencies": {
    "@arkweid/lefthook": "^0.7.2",
    "@types/fs-extra": "^9.0.2",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.6.2",
    "@types/node-fetch": "^2.5.7",
    "@types/prettier": "^2.1.5",
    "@types/yargs": "^15.0.12",
    "graphql": "^15.3.0",
    "graphql-subscriptions": "^1.0.0",
    "graphql-tools": "^4.0.8",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0"
  },
