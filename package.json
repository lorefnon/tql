{
  "name": "@timkendall/tql",
  "author": "Timothy Kendall",
  "version": "0.1.0-alpha.2",
  "description": "Write GraphQL queries in TypeScript.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "tql": "bin/index"
  },
  "files": [
    "dist",
    "bin"
