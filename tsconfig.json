{
  "include": ["src/**/*"],
  "compilerOptions": {
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES2019",
    "module": "commonjs",
    "noUnusedLocals": false,
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "incremental": true,
    "lib": ["ES2019"]
  }
}